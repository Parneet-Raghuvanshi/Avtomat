<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".frags.frag_profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/main_layout"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_profile"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:elevation="6dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:elevation="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:id="@+id/layout_this"
                    android:background="@drawable/profile_bg"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:id="@+id/profile"
                        android:textColor="#fff"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/edit_profile"
                        android:padding="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle"
                        android:layout_marginTop="120dp"
                        android:layout_marginRight="50dp"
                        android:layout_toLeftOf="@+id/image_user"
                        android:src="@drawable/edit"/>

                    <ImageView
                        android:id="@+id/about"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="120dp"
                        android:layout_marginRight="-187dp"
                        android:layout_toLeftOf="@+id/image_user"
                        android:background="@drawable/circle"
                        android:padding="8dp"
                        android:src="@drawable/info"
                        android:contentDescription="TODO" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/user"
                        android:id="@+id/image_user"
                        android:layout_width="100dp"
                        android:layout_below="@id/profile"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp"/>

                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/pb_userimg"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="85dp"
                        android:layout_marginEnd="156dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parneet"
                        android:textSize="16sp"
                        android:id="@+id/name_user"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:layout_below="@id/image_user"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8586825947"
                        android:textSize="16sp"
                        android:id="@+id/user_ph"
                        android:drawablePadding="4dp"
                        android:textColor="#fff"
                        android:layout_marginTop="4dp"
                        android:layout_below="@id/name_user"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:layout_marginBottom="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="parneetraghuvanshi@gmail.com"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:id="@+id/user_email"
                        android:textColor="#fff"
                        android:layout_marginTop="4dp"
                        android:layout_below="@id/user_ph"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_profile_layout"
                android:orientation="vertical"
                android:layout_below="@+id/layout_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/edit_layout_001"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="Update Your Email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/update_email_btn"
                            android:textColor="#fff"
                            android:text="update now"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/edit_layout_002"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="Update your Profile Image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/update_profileimg_btn"
                            android:textColor="#fff"
                            android:text="update now"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/edit_layout_003"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="Update your Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/update_name_btn"
                            android:textColor="#fff"
                            android:text="update now"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/edit_profile_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:text="About Us"
                    android:textSize="22sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/about_us"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>